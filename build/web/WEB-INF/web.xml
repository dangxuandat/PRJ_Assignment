<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>dat.listener.Listener</listener-class>
    </listener>
    <context-param>
        <param-name>roadmap</param-name>
        <param-value>/WEB-INF/roadmap.txt</param-value>
    </context-param>
    <filter>
        <filter-name>DispatchFilter</filter-name>
        <filter-class>dat.filter.DispatchFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DispatchFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>dat.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateUserInfoServlet</servlet-name>
        <servlet-class>dat.controller.UpdateUserInfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddItemToCartServlet</servlet-name>
        <servlet-class>dat.controller.AddItemToCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListIemsToShowView</servlet-name>
        <servlet-class>dat.controller.ListIemsToShowView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SearchByNameServlet</servlet-name>
        <servlet-class>dat.controller.SearchByNameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchByNameServlet</servlet-name>
        <url-pattern>/SearchByNameServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteUserByUserNameServlet</servlet-name>
        <servlet-class>dat.controller.DeleteUserByUserNameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteUserByUserNameServlet</servlet-name>
        <url-pattern>/DeleteUserByUserNameServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateUserInfoServlet</servlet-name>
        <url-pattern>/UpdateUserInfoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddItemToCartServlet</servlet-name>
        <url-pattern>/AddItemToCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListIemsToShowView</servlet-name>
        <url-pattern>/ListIemsToShowView</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
